    "@vitest/utils": "^4.0.13",
    "rimraf": "^6.0.1",
    "typescript": "^5.1.6",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "typescript": "4.x || 5.x",
    "vitest": ">=3.0.0"
  },
  "author": "Eike Lurz<eike.lurz@tuta.io>",
  "license": "MIT"
